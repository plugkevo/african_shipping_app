<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity3"
    >

<Spinner
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:dropDownWidth="wrap_content"
    android:gravity="center"
    />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview1"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#2b12ed"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="100dp"
        app:cardCornerRadius="30dp"

        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="WELCOME TO AFRICAN SHIPPING"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="30sp"/>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/african_shipping"
            />
        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="African shipping"
            android:textSize="45sp"
            android:textColor="#1ecbe1"
            android:textAlignment="center"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:id="@+id/linear1"
        android:layout_below="@+id/cardview1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/ship2"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shipping Services"
            android:textSize="25dp"
            android:textColor="#1ecbe1"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="We offer consolidated shipping services"
            android:textSize="20sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/linerar2"
            android:layout_below="@+id/linear1"
            android:layout_marginTop="20dp"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/cargo_plane"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Freight Services"
                android:textSize="25dp"
                android:textColor="#1ecbe1"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Freight services for perishable goods"
                android:textSize="20sp"/>
    <requestFocus/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/linerar3"
            android:layout_below="@+id/linear2"
            android:layout_marginTop="20dp"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/cargo_in_warehouse"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Freight Services"
                android:textSize="25dp"
                android:textColor="#1ecbe1"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Freight services for perishable goods"
                android:textSize="20sp"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>